<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This is Stats Page"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423" />

    <ImageView
        android:id="@+id/heartImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/heart_icon"
        app:layout_constraintBottom_toBottomOf="@+id/healthProgressBar"
        app:layout_constraintEnd_toStartOf="@+id/healthProgressBar"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/healthProgressBar"
        app:layout_constraintVertical_bias="0.555"
        android:contentDescription="@string/image_content_default" />


    <ImageView
        android:id="@+id/experienceImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/experience_icon"
        app:layout_constraintBottom_toBottomOf="@+id/experienceProgressBar"
        app:layout_constraintEnd_toStartOf="@+id/experienceProgressBar"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/experienceProgressBar"
        app:layout_constraintVertical_bias="0.5"
        android:contentDescription="@string/image_content_default" />

    <ImageView
        android:id="@+id/manaImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/mana_icon"
        app:layout_constraintBottom_toBottomOf="@+id/manaProgressBar"
        app:layout_constraintEnd_toStartOf="@+id/manaProgressBar"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manaProgressBar"
        app:layout_constraintVertical_bias="0.555"
        android:contentDescription="@string/image_content_default" />


    <ProgressBar
        android:id="@+id/healthProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:progress="55"
        android:progressDrawable="@drawable/health_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ProgressBar
        android:id="@+id/experienceProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:progress="15"
        android:progressDrawable="@drawable/experience_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthProgressBar"
        app:layout_constraintVertical_bias="0.05" />

    <ProgressBar
        android:id="@+id/manaProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:progress="85"
        android:progressDrawable="@drawable/mana_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experienceProgressBar"
        app:layout_constraintVertical_bias="0.05" />


</androidx.constraintlayout.widget.ConstraintLayout>