        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rounded_ui_2"
        android:backgroundTint="@color/gray"
        android:ellipsize="none"
        android:ems="10"
        android:fontFamily="@font/regular_pixel"
