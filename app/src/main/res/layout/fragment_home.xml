    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_blue" />

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="763dp"
        android:layout_height="810dp"
        android:background="@mipmap/sea_backdrop"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/skin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"
        android:contentDescription="@string/image_content_default" />

    <ImageView
        android:id="@+id/skin"
        android:layout_width="245dp"
        android:layout_height="250dp"
        android:layout_marginBottom="125dp"
        android:background="@mipmap/skin_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356"
        android:contentDescription="@string/image_content_default"/>

    <ImageView
        android:id="@+id/hair"
        android:layout_width="240dp"
        android:layout_height="245dp"
        android:background="@mipmap/hair_1"
        app:layout_constraintBottom_toBottomOf="@+id/shirt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477"
        android:contentDescription="@string/image_content_default" />

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/shadow"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562"
        android:contentDescription="@string/image_content_default" />

    <ImageView
        android:id="@+id/pants"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@mipmap/pants_1"
        app:layout_constraintBottom_toBottomOf="@+id/backdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skin"
        app:layout_constraintVertical_bias="0.436"
        android:contentDescription="@string/image_content_default" />

    <ImageView
        android:id="@+id/shoe"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@mipmap/shoe_1"
        app:layout_constraintBottom_toBottomOf="@+id/backdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shirt"
        app:layout_constraintVertical_bias="0.615"
        android:contentDescription="@string/image_content_default" />

    <ImageView
        android:id="@+id/shirt"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@mipmap/shirt_1"
        app:layout_constraintBottom_toBottomOf="@+id/pants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skin"
        app:layout_constraintVertical_bias="0.2"
        android:contentDescription="@string/image_content_default" />

    <include layout="@layout/main_modal" />

    <include
        layout="@layout/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_list"
        android:layout_width="301dp"
        android:layout_height="166dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.805" />

</androidx.constraintlayout.widget.ConstraintLayout>
